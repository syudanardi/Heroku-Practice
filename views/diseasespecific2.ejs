    <title>Specific Disease</title>
</head>

    <body>

        <!--Navigation bar-->
        <div id="nav-placeholder">
            <% include navbar.ejs %>
        </div>


        <!-- <form>
            <fieldset id="F1">
                <textarea id="T1" rows="5" cols="50" readonly required></textarea><br>
                <textarea id="T2" rows="5" cols="50" readonly required></textarea><br>
