<body>

<div class="col-lg-8">
    <h1 style="color:#5B5B5B">Add Health Fact to Database</h1>
    </br>
    <form method="post" action="/addhealthfact/submit">

      <div class="health-fact">
        <label for="fact" id="admin-description">Enter Health Fact</label>
          <textarea class="form-control" placeholder="Enter Health Fact" rows="3" name="fact" id="fact" required></textarea>
      </div>

        <br>

      <div class="health-fact">
        <label for="link id="admin-description"">Enter Link Health Fact</label>
          <textarea class="form-control" placeholder="Enter Question" rows="1" name="link" id="link" required></textarea>
    </div>

        <br>
        <br>
        <br>

      <!-- Submit -->
      <input type="submit" value="Add Data">
    </form>
</div>
